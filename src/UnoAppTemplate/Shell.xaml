<Page
    x:Class="UnoAppTemplate.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoAppTemplate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <SplitView
            x:Name="_splitView"
            DisplayMode="Overlay"
            IsPaneOpen="False"
            PanePlacement="Left">
            <SplitView.Pane>
                <Grid Background="Red" />
            </SplitView.Pane>
            <SplitView.Content>
                <Grid Padding="16">

                    <StackPanel>
                        <TextBlock>
                            Welcome To World
                        </TextBlock>
                        <Button HorizontalAlignment="Stretch" Click="Button_Click">
                            Ok
                        </Button>
                        <NavigationView />
                        <ToggleButton>
                            <Grid Background="Yellow">
                                <TextBlock>
                                    Welcome
                                </TextBlock>
                            </Grid>
                        </ToggleButton>
                    </StackPanel>
                </Grid>

            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
