<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TextBased" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style BasedOn="{StaticResource TextBased}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style
        x:Key="Display-Large"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="57" />
        <Setter Property="LineHeight" Value="64" />
    </Style>

    <Style
        x:Key="Display-Medium"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="45" />
        <Setter Property="LineHeight" Value="52" />
    </Style>

    <Style
        x:Key="Display-Small"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="LineHeight" Value="44" />
    </Style>

    <Style
        x:Key="Headline-Large"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="LineHeight" Value="40" />
    </Style>

    <Style
        x:Key="Headline-Medium"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="LineHeight" Value="36" />
    </Style>

    <Style
        x:Key="Headline-Small"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="LineHeight" Value="32" />
    </Style>

    <Style
        x:Key="Title-Large"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="LineHeight" Value="28" />
    </Style>

    <Style
        x:Key="Title-Medium"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style
        x:Key="Title-Small"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <Style
        x:Key="Body-Large"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style
        x:Key="Body-Medium"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <Style
        x:Key="Label-Small"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <Style
        x:Key="Label-Large"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <Style
        x:Key="Label-Medium"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="16" />
    </Style>

    <Style
        x:Key="Body-Small"
        BasedOn="{StaticResource TextBased}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="LineHeight" Value="16" />
    </Style>

</ResourceDictionary>
