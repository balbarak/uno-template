<Page
    x:Class="UnoAppTemplate.Demo.Views.ThirdPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoAppTemplate.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utu="using:Uno.Toolkit.UI"
    Background="{ThemeResource SurfaceColor}"
    mc:Ignorable="d">

    <Page.Resources>
        <utu:ShadowCollection x:Key="NeumorphismRaising">
            <!--  Bottom right darker violet  -->

            <utu:Shadow
                BlurRadius="15"
                OffsetY="8"
                Opacity="0.5"
                Color="Black" />

        </utu:ShadowCollection>
    </Page.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <local:PageHeader Header="Welcome s" />

        <Grid Grid.Row="1" Style="{StaticResource Container}">
            <StackPanel Spacing="18">

                <TextBlock Grid.Row="1" Text="Third Page" />

            </StackPanel>
        </Grid>
    </Grid>

</Page>
