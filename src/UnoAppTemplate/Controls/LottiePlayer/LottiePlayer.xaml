<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoAppTemplate.Controls"
    xmlns:lottie="using:CommunityToolkit.WinUI.Lottie"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls">

    <Style TargetType="local:LottiePlayer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:LottiePlayer">
                    <winui:AnimatedVisualPlayer x:Name="PART_Player" AutoPlay="False">
                        <lottie:LottieVisualSource UriSource="{TemplateBinding Source}" />
                    </winui:AnimatedVisualPlayer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
