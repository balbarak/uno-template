<Page
    x:Class="UnoAppTemplate.Views.LoadingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UnoAppTemplate.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:UnoAppTemplate.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:LoadingViewModel}"
    Background="{ThemeResource SurfaceContainerLowColor}"
    mc:Ignorable="d">

    <Grid Padding="{StaticResource Container-Thickness}" Background="{ThemeResource SurfaceContainerLowColor}">

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="16">

            <ProgressRing Width="50" Height="50" />
            <TextBlock Text="{Binding Title}" />
        </StackPanel>
    </Grid>

</Page>
